<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CustomControls.CustomTextView
        android:id="@+id/txtScoreOpponent"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_holo_light"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/label_score"
        android:textColor="@color/primaryLight"
        android:textSize="12sp" />

    <CustomControls.CustomTextViewBold
        android:id="@+id/txtOpponent"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:text="@string/label_opponent"
        android:textColor="@color/textWhite"
        android:textSize="16sp" />

    <CustomControls.CustomTextView
        android:id="@+id/txtScoreUser"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_holo_light"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/label_score"
        android:textColor="@color/primaryLight"
        android:textSize="12sp" />
</LinearLayout>